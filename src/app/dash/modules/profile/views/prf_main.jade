.row
    .col-md-12.col-lg-12.col-sm-12
        .portlet.light.bordered
            .portlet-title
                .caption
                    i.icon-settings.font-dark
                    span.caption-subject.font-dark.sbold.uppercase Profile
                .actions
                    .btn-group.btn-group-devided(data-toggle='buttons')
                        label.btn.btn-transparent.dark.btn-outline.btn-circle.btn-sm.active
                            input#option1.toggle(type='radio', name='options')
                            | Actions
                        label.btn.btn-transparent.dark.btn-outline.btn-circle.btn-sm
                            input#option2.toggle(type='radio', name='options')
                            | Settings
            .portlet-body.form
                form.form-horizontal(role='form')
                    .form-body
                        .form-group
                            label.col-md-3.control-label Name
                            .col-md-9
                                input.form-control(type='text', placeholder='Enter text', ng-model='user.name')
                                span.help-block  Shown public
                        .form-group
                            label.col-md-3.control-label Email Address
                            .col-md-9
                                .input-group
                                    span.input-group-addon
                                        i.fa.fa-envelope
                                    input.form-control(type='email', placeholder='Email Address', disabled='', ng-model='user.email')
                        .form-group(style='display: none')
                            label.col-md-3.control-label Password
                            .col-md-9
                                .input-group
                                    input.form-control(type='password', placeholder='Password')
                                    span.input-group-addon
                                        i.fa.fa-user
                        .form-group
                            label.col-md-3.control-label(ng-class="{'font-green-sharp' : availRadio = 1, 'font-red-mint': availRadio = 0, 'text-warning' : availRadio = 2}") Availability
                            .col-md-9
                                .btn-group
                                    label.btn.btn-default(ng-model='user.availability', uib-btn-radio='1', uncheckable='') Available
                                    label.btn.btn-default(ng-model='user.availability', uib-btn-radio='2', uncheckable='') Maybe
                                    label.btn.btn-default(ng-model='user.availability', uib-btn-radio='0', uib-uncheckable='') Unavailable
                        .form-group
                            label.col-md-3.control-label gender
                            .col-md-9
                                .btn-group
                                    label.btn.btn-default(ng-model='user.gender', uib-btn-radio='0', uncheckable='')
                                        i.fa.fa-venus
                                    label.btn.btn-default(ng-model='user.gender', uib-btn-radio='1', uncheckable='')
                                        i.fa.fa-mars
                        .form-group
                            label.col-md-3.control-label Date of Birth
                            .col-md-9
                                .input-group
                                    .input-icon
                                        i.fa.fa-lock.fa-fw
                                        input.form-control(type='date', ng-model='user.dob')
                                    |                                     {{user.dob}}
                    .form-actions
                        .row
                            .col-md-offset-3.col-md-9
                                button.btn.green(type='submit') Submit
                                button.btn.default(type='button') Cancel
