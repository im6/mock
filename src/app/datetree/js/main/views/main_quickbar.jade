        .tab-content
            #quick_sidebar_tab_1.tab-pane.active.page-quick-sidebar-chat(ng-class="{'page-quick-sidebar-content-item-shown': viewModel.showDialog}")
                .page-quick-sidebar-chat-users(data-rail-color='#ddd', data-wrapper-class='page-quick-sidebar-list')
                    ul.media-list.list-items
                        li.media(ng-repeat='oneuser in viewModel.userList', ng-click='toggleDialog(true)')
                            .media-status
                                span.badge.badge-success
                                    | {{oneuser.msgCnt}}
                            img.media-object(src='/assets/metronic/pages/media/users/avatar3.jpg', alt='...')
                            .media-body
                                h4.media-heading
                                    | {{oneuser.name}}
                                .media-heading-sub
                                    | {{oneuser.desc}}
                .page-quick-sidebar-item
                    .page-quick-sidebar-chat-user
                        .page-quick-sidebar-nav
                            a.page-quick-sidebar-back-to-list(href='javascript:;', ng-click='toggleDialog(false)')
                                i.icon-arrow-left
                                | Back
                        .page-quick-sidebar-chat-user-messages
                            .post(ng-class="{'out': onemsg.isOut, 'in': !onemsg.isOut}", ng-repeat='onemsg in viewModel.currentDialog')
                                img.avatar(alt='', src='/assets/metronic/layouts/layout/img/avatar3.jpg')
                                .message
                                    span.arrow
                                    a.name(href='javascript:void(0)')
                                        | {{onemsg.name}}
                                    span.datetime
                                        | {{onemsg.time}}
                                    span.body
                                        | {{onemsg.msg}}
                        .page-quick-sidebar-chat-user-form
                            .input-group
                                input.form-control(type='text', placeholder='Type a message here...', ng-keypress='keyPost($event)', ng-model='viewModel.currentMsg')
                                .input-group-btn
                                    button.btn.green(type='button', style='height: 34px', ng-click='mousePost()')
                                        i.icon-paper-clip
