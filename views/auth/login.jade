doctype html
html
    head
        meta(charset='UTF-8')
        title Welcome to login
        link(rel='shortcut icon', href='/content/dash/icon/favicon.ico')
        link(rel='stylesheet', href='/build/auth/css/style.min.css')
    body
        .wrapper
            .container
                h1 Welcome to ZJ & XJ
                form.form(action="/auth/signin" method="POST")
                    input(name='username', placeholder='Username')
                    input(name='password', placeholder='Password')
                    button#login-button(type='submit') Sign In

                div.socialIcon
                    h4 or login with
                    ul
                        li
                            i.fa.fa-weixin.fa-2x
                        li
                            i.fa.fa-weibo.fa-2x
                        li
                            i.fa.fa-facebook-official.fa-2x
                        li
                            i.fa.fa-google-plus.fa-2x

            - var n = 0
            ul.bg-bubbles
                while n < 30
                    li
                    - n++
